<p id="notice"><%= notice %></p>

<h1>Listing Product Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Main image</th>
      <th>Other images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_attachments.each do |product_attachment| %>
      <tr>
        <td><%= product_attachment.product_id %></td>
        <td><%= product_attachment.main_image %></td>
        <td><%= product_attachment.other_images %></td>
        <td><%= link_to 'Show', product_attachment %></td>
        <td><%= link_to 'Edit', edit_product_attachment_path(product_attachment) %></td>
        <td><%= link_to 'Destroy', product_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

