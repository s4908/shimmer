<br><%= link_to '新增商品', new_admin_product_path ,class: 'btn btn-default' %><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th></th>
      <th>商品名稱</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td> <%= product.id %> </td>
      <td> <%= image_tag product.main_image.image_url(:thumb), height: "30px"%> </td>
      <td> <%= product.title %> </td>
      <td> 
        <%= link_to '刪除', admin_product_path(product), method: :delete, class: 'btn btn-danger' %> 
        <%= link_to '修改', edit_admin_product_path(product), class: 'btn btn-primary' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>